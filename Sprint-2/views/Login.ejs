<HTML>
  <head>
    <title>PAS Concordia</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="LoginStyle.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <div class="wrapper">
      <form action="/LogUser" method="POST" class="LoginForm">
        <h2>Login Page</h2>

        <div class="input-box">
          <input
            type="text"
            id="username"
            name="Username"
            placeholder="Username"
          />
          <i class="bx bxs-user"></i>
        </div>
        <div class="input-box">
          <input
            type="password"
            id="password"
            name="Password"
            placeholder="Password"
          />
          <i class="bx bxs-lock-alt"></i>
        </div>

        <div class="remember-forgot">
          <input type="radio" name="Option" value="Student" />
          <label for="Option1"> Student </label>
          <input type="radio" name="Option" value="Teacher" />
          <label for="Option2"> Teacher </label><br />
        </div>

        <button type="submit" value="Submit" class="btn">Login</button>
      </form>
    </div>
  </body></HTML
>
